pipeline{
    agent any
    stages{
        stage('checkout-stage1'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Harikrishna241/python']])

            }
        }
        stage('running-pythonscript'){
            steps{
                echo 'we are in stage2'

            }
        }

    }

}