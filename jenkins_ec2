pipeline{
    agent any
    environment{
        cred=credentials('aws-cred')
    }
    stages{
        stage('checkout'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Harikrishna241/Jenkins_EC2.git']])
                
            }        
        }
        stage('terraform init'){
            steps{
                sh 'terrafrom init'
            }
        }
        stage('terraform plan'){
            steps{
                sh 'terrafrom plan'
            }
        }

    }
}